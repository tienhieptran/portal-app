@using BI_Project.Services.User;
@using BI_Project.Models.EntityModels;
@using System.Text.RegularExpressions;
@model BI_Project.Models.UI.BlockModel

@{
    BlockLangUserChangepwModel blockLang = (BlockLangUserChangepwModel)Model.LanguageModel;

    

}
<style>
    .form-horizontal .radio, .form-horizontal .checkbox, .form-horizontal .radio-inline, .form-horizontal .checkbox-inline {
        padding-top: 0px;
    }
</style>

<!-- /page header -->
<div class="content">
    <div class="row">
        <div class="col-lg-12">
            <!-- /main charts -->
            <div class="panel panel-flat">
                    @if (Session["msg_text"] != null)
                    {
                        string class_panel = "panel-danger ";
                        if (Session["msg_code"] != null)
                        {
                            int msgCode = (int)Session["msg_code"];
                            if (msgCode >= 1) { class_panel = " panel-success "; }

                            Session.Remove("msg_code");
                        }
                        <div class="panel  @class_panel">
                            <div class="panel-heading">

                                @Session["msg_text"]


                            </div>
                        </div>
                        Session.Remove("msg_text");
                    }
                <div class="panel-body">


                    @using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post, new { data_toggle = "validator", role = "form" }))
                    {
                        <input type="hidden" name="UserId" value="" />

                        
                        <div class="form-group row">
                            <label for="Name" class="col-md-2">@blockLang.OldPassword</label>
                            <div class="col-md-10">
                                <input type="password" class="form-control" id="OldPassword" name="OldPassword" value="">
                            </div>

                        </div>

                        <div class="form-group row">
                            <label for="Name" class="col-md-2">@blockLang.Password</label>
                            <div class="col-md-10">
                                <input type="password" class="form-control" id="Password" name="Password" value="">
                            </div>

                        </div>
                        <div class="form-group row">
                            <label for="Name" class="col-md-2">@blockLang.ConfirmPassword</label>
                            <div class="col-md-10">
                                <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" value="">
                            </div>
                        </div>
                            
                         
                        <div class="form-group  row">

                            <div class="col-md-offset-2 col-md-10 ">
                                <button type="submit" class="btn btn-success">@blockLang.BtnSubmit</button>
                            </div>


                        </div>

                    }
                </div>
            </div>
        </div>
    </div>

</div>