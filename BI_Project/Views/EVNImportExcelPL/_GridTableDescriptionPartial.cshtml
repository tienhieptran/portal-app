@model IEnumerable<bicen.Models.EntityModels.MoTaDNTModel>
<div class="table-responsive">
    <table class="table table-bordered table-hover datatable-highlight">
        <thead>
            <tr style="background: darkgrey; font-weight:bold;">
                <th style="padding: 5px";>Tên cột</th>
                <th style="padding: 5px";>Kiểu dữ liệu</th>
                <th style="padding: 5px";>Mô tả</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="padding: 5px";>@Html.DisplayFor(modelItem => item.Col_name)</td>
                    <td style="padding: 5px";>@Html.DisplayFor(modelItem => item.Data_type)</td>
                    <td style="padding: 5px";>@Html.DisplayFor(modelItem => item.Description)</td>
                </tr>
            }
        </tbody>

    </table>
</div>

